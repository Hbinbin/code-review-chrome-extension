{
    "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true,
      "**/node_modules": true,
      "**/dist": false,
      "**/.vscode": false
    },
    "eslint.options": {
      "extensions": [
        ".js",
        ".ts",
        ".tsx",
        ".html"
      ]
    },
    "eslint.validate": [
      "html",
      "javascript",
      "react",
      "typescript",
      "typescriptreact"
    ],
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
  }